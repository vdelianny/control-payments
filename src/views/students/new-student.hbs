<div class="col-md-4 mx-auto">
	<div class="card">
		<div class="card-header">
			<h3>New student</h3>
		</div>
		<div class="card-body">
			<form action="/students/new-student" method="POST">
				<div class="form-group">
					<input type="text" name="name" class="form-control" placeholder="Nombre">
				</div>
				<div class="form-group">
					<input type="text" name="surname" class="form-control" placeholder="Apellido">
				</div>
				<div class="form-group">
					<input type="text" name="parent" class="form-control" placeholder="Cédula del representante">
				</div>
				<div class="form-group">
					<label for="nameSelect">Identificador</label>
				    <select class="custom-select" name="section" id="nameSelect">
						<option value="A">A</option>
				    	<option value="B">B</option>
				    	<option value="C">C</option>
				    	<option value="D">D</option>
				    </select>
				</div>
				<div class="form-group">
					<label for="gradeSelect">Grade</label>
				    <select class="custom-select" name="grade" id="gradeSelect">
				    	{{#each grades}}
							<option value="{{number}}">{{number}}°</option>
						{{/each}}
				    </select>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block" type="submit">Save</button>
				</div>
			</form>
		</div>
	</div>
</div>