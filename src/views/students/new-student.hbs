<div class="new-student">
	<div class="title-box mb-5">
		<p>Nuevo estudiante</p>
		<hr>
	</div>
	<div class="col-md-8 mx-auto">
		<div class="card">
			<div class="card-header">
				<i class="far fa-user mx-1"></i>
				<span>Añadir estudiante</span>
			</div>
			<div class="card-body mx-2">
				<form action="/students/new-student" method="POST">
					<div class="form-row">
						<div class="form-group col-md-6">
							<input type="text" name="name" class="form-control" placeholder="Nombre">
						</div>
						<div class="form-group col-md-6">
							<input type="text" name="surname" class="form-control" placeholder="Apellido">
						</div>
						<div class="form-group col-md-6">
							<label for="gender">Género</label>
						    <select class="custom-select" name="gender" id="genderSelect">
								<option value="F">F</option>
						    	<option value="M">M</option>
						    </select>
						</div>
						<div class="form-group col-md-6">
							<label for="age">Edad</label>
							<input type="number" name="age" class="form-control" placeholder="Edad">
						</div>
						<div class="form-group col-md-12">
							<input type="text" name="ce" class="form-control" placeholder="Cédula estudiantil">
						</div>
						<div class="form-group col-md-6">
							<label for="birthdate">Fecha de nacimiento</label>
							<input type="date" id="birthdate" name="birthdate" class="form-control">
						</div>
						<div class="form-group col-md-6">
							<label for="birthplace">Lugar de nacimiento</label>
							<input type="text" name="birthplace" class="form-control" placeholder="Lugar de nacimiento">
						</div>
						<div class="form-group col-md-6">
							<input type="text" name="parent" class="form-control" placeholder="Nombre del representante">
						</div>
						<div class="form-group col-md-6">
							<input type="text" name="phone" class="form-control" placeholder="Número de teléfono">
						</div>
						<div class="form-group col-md-6">
							<label for="gradeSelect">Grado</label>
						    <select class="custom-select" name="grade" id="gradeSelect">
						    	{{#each grades}}
									<option value="{{number}}">{{number}}°</option>
								{{/each}}
						    </select>
						</div>
						<div class="form-group col-md-6">
							<label for="sectionSelect">Sección</label>
						    <select class="custom-select" name="section" id="sectionSelect">
								<option value="A">A</option>
						    	<option value="B">B</option>
						    	<option value="C">C</option>
						    	<option value="D">D</option>
						    </select>
						</div>
					</div>
					<div class="form-group">
						<button class="btn btn-block mt-2" type="submit">Guardar</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>