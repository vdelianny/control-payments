<div class="new-section">
	<div class="title-box mb-5">
		<p>Nueva sección</p>
		<hr>
	</div>
	<div class="col-md-5 mx-auto">
		<div class="card">
			<div class="card-header">
				<i class="far fa-user mx-1"></i>
				<span>Añadir sección</span>
			</div>
			<div class="card-body">
				<form action="/sections/new-section" method="POST">
					<div class="form-group">
						<label for="nameSelect">Sección</label>
					    <select class="custom-select" name="name" id="nameSelect">
							<option value="A">A</option>
					    	<option value="B">B</option>
					    	<option value="C">C</option>
					    	<option value="D">D</option>
					    </select>
					</div>
					<div class="form-group">
						<label for="gradeSelect">Grado</label>
					    <select class="custom-select" name="grade" id="gradeSelect">
					    	{{#each grades}}
								<option value="{{number}}">{{number}}°</option>
							{{/each}}
					    </select>
					</div>
					<div class="form-group">
						<button class="btn btn-block" type="submit">Guardar</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>