<div>

	<div class="form-group">
		<label for="monthSelect">Estudiantes con pagos pendientes hasta el mes:</label>
		<select class="custom-select" name="month" id="monthSelect">
	    	<option value="0" selected disabled>Seleccione un mes</option>
	    	<option value="1">Enero</option>
	    	<option value="2">Febrero</option>
	    	<option value="3">Marzo</option>
	    	<option value="4">Abril</option>
	    	<option value="5">Mayo</option>
	    	<option value="6">Junio</option>
	    	<option value="7">Julio</option>
	    	<option value="8">Agosto</option>
	    	<option value="9">Septiembre</option>
	    	<option value="10">Octubre</option>
	    	<option value="11">Noviembre</option>
	    	<option value="12">Diciembre</option>
	    </select>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Nombre</th>
				<th scope="col">Apellido</th>
				<th scope="col">Acciones</th>
			</tr>
		</thead>
		<tbody>
			{{#each students}}
				{{#if (paymentsMatch payments)}}
					<p>holis</p>
					{{else}}
					<p>bye</p>
				{{/if}}
				<tr>
					<td>{{data.name}}</td>
					<td>{{data.surname}}</td>
					<td>
						<a href="/students/details/{{_id}}"><i class="far fa-user"></i></a>
						<a href="/payments/{{_id}}/new-payment"><i class="far fa-money-bill-alt"></i></a>
					</td>
				</tr>
			{{else}}
				<tr>
					<td>No hay registros</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>